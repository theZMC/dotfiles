{
  "$schema": "https://charm.land/crush.json",
  "options": {
    "disabled_tools": [
      "sourcegraph"
    ],
    "auto_lsp": true
  },
  "tools": {
    "ls": {
      "max_depth": 10,
      "max_items": 1000
    },
    "grep": {
      "timeout": 5000
    }
  },
  "mcp": {
    "terraform": {
      "type": "stdio",
      "command": "terraform-mcp-server"
    },
    "svelte": {
      "type": "stdio",
      "command": "svelte-mcp"
    },
    "context7": {
      "type": "stdio",
      "command": "context7-mcp"
    },
    "shadcn": {
      "type": "stdio",
      "command": "pnpm",
      "disabled": true,
      "args": [
        "dlx",
        "shadcn@latest",
        "mcp"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer $(gh auth token)"
      }
    }
  },
  "lsp": {
    "astro": {
      "command": "astro-ls",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "astro"
      ],
      "root_markers": [
        "package.json",
        "astro.config.mjs",
        "astro.config.js",
        "astro.config.cjs"
      ]
    },
    "go": {
      "command": "gopls",
      "filetypes": [
        "go"
      ]
    },
    "typescript": {
      "command": "vtsls",
      "root_markers": [
        "package.json",
        "tsconfig.json",
        "jsconfig.json"
      ],
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "typescript",
        "typescriptreact",
        "javascript",
        "javascriptreact"
      ]
    },
    "terraform": {
      "command": "terraform-ls",
      "root_markers": [
        ".terraform",
        "main.tf",
        "variables.tf",
        "terraform.tf"
      ],
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform"
      ]
    },
    "helm": {
      "command": "helm_ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "helm"
      ],
      "root_markers": [
        "Chart.yaml",
        "values.yaml"
      ]
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": [
        "rust"
      ],
      "root_markers": [
        "Cargo.toml",
        "rust-project.json"
      ]
    },
    "python": {
      "root_markers": [
        "pyproject.toml",
        "setup.py",
        "setup.cfg",
        "requirements.txt"
      ],
      "command": "ruff",
      "args": [
        "server"
      ]
    },
    "svelte": {
      "command": "svelteserver",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "svelte"
      ],
      "root_markers": [
        "package.json",
        "svelte.config.js",
        "svelte.config.cjs"
      ]
    },
    "reactjs": {
      "command": "reactjs-codegen-ls",
      "args": [],
      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ],
      "root_markers": [
        "package.json",
        "tsconfig.json",
        "jsconfig.json"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh",
        "bash"
      ]
    }
  }
}
